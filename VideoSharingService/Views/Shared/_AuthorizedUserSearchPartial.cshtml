@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Search", "Home", FormMethod.Get, new { @class = "form-inline" }))
    {
        <input class="form-control col-lg-9 mr-sm-2 bg-dark text-light" 
               id="searchField" name="searchString" type="search" placeholder="@Resources.GlobalRes.SearchForFriend" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0 btn-outline-light" type="submit">@Resources.GlobalRes.Search</button>
    }
}